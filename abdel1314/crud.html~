<script defer type="text/javascript">

var tableau3 = [];
rDocuments();

function rDocuments(){
  data = {"table":"document"};
  $.ajax({url :'r.php',
        data: data ,
        success : function (html){
          doc = JSON.parse(html);
        remplirGridDocuments(doc);
    }
        });
    
     

}

function remplirGridDocuments(documents){

documents.forEach(function(s){
        tableau3.push({ recid: s["id_doc"], text: s["nom"], text:s["X(latlng)"], text: s["url"], check: false});
    });

$(function () {
    $('#grid3').w2grid({ 
        name: 'grid3', 
        show: { 
            toolbar: true,
            footer: true,
            toolbarSave: false
        },
        columns: [                
            { field: 'recid', caption: 'ID doc', size: '50px', sortable: true, resizable: true },
            { field: 'text', caption: 'nom', size: '50px', sortable: true, resizable: true },
            { field: 'position', caption: 'coordonnee', size: '50px', sortable: true, resizable: true },
            { field: 'text', caption: 'lien', size: '80px', sortable: true, resizable: true
            },
            { field: 'check', caption: 'select', size: '60px', sortable: true, resizable: true, 
                editable: { type: 'checkbox' } 
            }
        ],
        toolbar: {
            items: [
                { id: 'add', type: 'button', caption: 'Add Record', icon: 'w2ui-icon-plus' }
            ],
            onClick: function (event) {
                if (event.target == 'add') {
                    w2ui.grid3.add({ recid: w2ui.grid3.records.length + 1 });
                }
            }
        },
        records: tableau3
    });    
});

}
